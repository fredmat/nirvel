{%- liquid
  assign color_scheme = color_scheme | default: settings.tooltip_color_scheme
  assign label = label | default: '?'
  assign trigger = trigger | default: 'mouseenter focus'
  assign placement = placement | default: 'top'
  assign cursor = cursor | default: 'default'

  if interactive == nil
    assign interactive = false
  endif

  if focusable == nil
    assign focusable = false
  endif
-%}

<div
  data-tooltip-toggle
  data-color-scheme="color-{{ color_scheme }}"
  data-translucent="{{ settings.tooltip_translucent_background }}"
  data-border="{{ settings.tooltip_border }}"
  data-tippy-placement="{{ placement }}"
  data-tippy-trigger="{{ trigger }}"
  data-tippy-content="{{ content | strip | escape }}"
  {% if interactive == true %}data-tippy-interactive="true"{% endif %}
  {% if focusable == true %}tabindex="0"{% endif %}
  class="tooltip-toggle{% if class %} {{ class }}{% endif %}"
  style="cursor: {{ cursor }};"
>
  {{- label -}}
</div>

{% style %}
  .tooltip-toggle {
    display: inline-flex;
  }
{% endstyle %}
