{% if closest.collection == blank %}
  {% assign text = 'placeholders.collection_headline' | t %}
  {% capture collection_headline %}<p>{{ text }}</p>{% endcapture %}
  {% render 'text', fallback_text: collection_headline, block: block %}
{% else %}
  {%- assign headline = closest.collection.metafields.custom.collection_headline.value -%}
  {%- assign description = closest.collection.description | strip_html | strip -%}

  {%- assign display_text = headline | default: description -%}

  {% if display_text != blank %}
    {%- assign clamp = block.settings.line_clamp | default: 2 -%}
    {%- assign hide_on_mobile = block.settings.hide_on_mobile -%}

    {% capture collection_text %}
      <span
        class="
          collection-headline__wrapper
          {% if hide_on_mobile %}
            collection-headline__wrapper--hide-on-mobile
          {% endif %}
        "
        style="--collection-card-headline-line-clamp: {{ clamp }};"
      >
        {{ display_text | escape }}
      </span>
    {% endcapture %}

    {% render 'text', fallback_text: collection_text, block: block %}
  {% endif %}
{% endif %}

